@model Users.Models.ViewModels.RegisterModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LayoutArticle.cshtml";
}
@using Recaptcha.Web.Mvc;

<h2>Register</h2>
@Html.ValidationSummary(false)
<div class="row">
    <div class="col-lg-6 col-lg-offset-3">
        <div class="row">
            @using (Html.BeginForm())
            {
                <div class="form-group">

                    <label class="col-lg-4">Name</label>
                    <div class="col-lg-8">
                        @Html.TextBoxFor(x => x.Username, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-4">Email</label>
                    <div class="col-lg-8">

                        @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-4">
                        Password
                    </label>
                    <div class="col-lg-8">

                        @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-4">Confirm Password</label>
                    <div class="col-lg-8">
                        @Html.PasswordFor(x => x.ConfirmPassword, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-4">Phone Number</label>
                    <div class="col-lg-8">

                        @Html.TextBoxFor(x => x.Phoneno, new { @class = "form-control" })

                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-4">Birthday</label>
                    <div class="col-lg-8">

                        @Html.TextBoxFor(x => x.BirthDate, new { @class = "form-control col-lg-3" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-4">Captcha</label>
                    <div class="col-lg-8">
                        @Html.Recaptcha(theme: Recaptcha.Web.RecaptchaTheme.Clean);
                    </div>

                    </div>
    <div class="col-lg-offset-1">
        <button type="submit" class="btn btn-primary">Create</button>
        @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default " })
    </div>
            }
        </div>

    </div>
</div>
